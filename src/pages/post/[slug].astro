---
import type { SanityDocument } from "@sanity/client";
import { urlForImage } from "../../sanity/lib/url-for-image";
import { loadQuery } from "../../sanity/lib/load-query";
import PortableText from "../../components/PortableText.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const { data: posts } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "post" && defined(slug.current)]`,
  });

  return posts.map(({ slug }) => {
    return {
      params: {
        slug: slug.current,
      },
    };
  });
}

const { params } = Astro;

const { data: post } = await loadQuery<any>({
  query: `*[_type == "post" && slug.current == $slug][0] {
    ...,
    author-> {
      name
    }
  }`,
  params,
});

const formattedDate = new Date(post.publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={post.title}>
  <main class="main-content">
    <article class="post">
      <header class="post-header">
        {post.mainImage && (
          <div class="header-image-container">
            <img 
              src={urlForImage(post.mainImage).width(1600).quality(90).url()} 
              alt={post.mainImage.alt || ""} 
              class="header-image"
            />
          </div>
        )}
        <h1 class="post-title">{post.title}</h1>
        <p class="post-meta">
          By {post.author?.name || 'Anonymous'} on {formattedDate}
        </p>
      </header>

      <div class="post-body">
        <PortableText portableText={post.body} />
      </div>
    </article>
  </main>
</Layout>

<style>
  .main-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2.5rem;
  }

  .post-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .header-image-container {
    margin-bottom: 3rem;
    overflow: hidden;
    background-color: #f0f0f0;
  }

  .header-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .post-title {
    font-size: 3rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin: 0 0 1rem 0;
  }

  .post-meta {
    color: var(--text-secondary);
    font-size: 1rem;
  }

  .post-body {
    font-size: 1.125rem;
    line-height: 1.7;
  }

  /* Styling the Portable Text Output */
  .post-body h2 {
    font-size: 2rem;
    font-weight: 600;
    margin: 3rem 0 1.5rem 0;
  }

  .post-body h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem 0;
  }

  .post-body p {
    margin-bottom: 1.5rem;
  }

  .post-body a {
    color: var(--text-primary);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .post-body a:hover {
    color: var(--text-secondary);
  }

  .post-body blockquote {
    border-left: 3px solid var(--border-color);
    padding-left: 1.5rem;
    margin: 2rem 0;
    color: var(--text-secondary);
    font-style: italic;
  }

  @media (max-width: 600px) {
    .main-content {
      padding: 2rem 1.5rem;
    }
    .post-title {
      font-size: 2.25rem;
    }
    .post-body {
      font-size: 1rem;
    }
  }
</style>
